---
import RightArrow from "../assets/RightArrow.astro";
import WebNav from "../components/WebNav.astro";
---
<div class="overflow-clip relative h-dvh flex flex-col justify-between mb-2 bg-[url(/images/AnimatedBg.svg)] bg-no-repeat bg-cover bg-top">
  <div class="px-5">
    <WebNav></WebNav>
  </div>
  <main class="h-fit w-full flex flex-col items-center relative">
    <div class="barlowFont flex flex-col justify-center items-center relative px-5">
      <div class="flex flex-col justify-center items-center gap-y-2">
        <img src="/icons/ribbon/SVG/SorozcoType.svg" class="aspect-[100/41] h-fit relative"  v-motion width="700" alt="principal typography of Sergio Orozco">
        <p class="text-white text-3xl lg:text-[7vh] italic font-semibold lg:leading-none">Frontend Developer</p>
      </div>
    </div>
  <!-- figures and Animations -->
  </main>
  <div class="border-t border-slate-600 w-full pb-12 px-5 h-fit">
    <div class="flex lg:flex-row justify-center items-center flex-col lg:justify-between mt-4 relative">
      <a href="https://sproutloud.com/" target="_blank" class="inline-flex bg-slate-700 rounded-full group transition-all duration-500 hover:bg-amber-500 hover:text-slate-950 hover:scale-95">
        <div class="flex items-center">
          <div class="aspect-square h-16 rounded-full group-hover:bg-slate-200 flex justify-center items-center duration-300 transition-colors">
            <div class="bg-amber-500 group-hover:bg-blue-500 size-8 rounded-full absolute animate-ping animate-duration-[2000ms]"></div>
            <span class="bg-slate-800 border-2 p-2 border-white size-10 rounded-full flex justify-center items-center absolute transition-colors duration-300 group-hover:bg-slate-950 group-hover:text-amber-500">
                <RightArrow />
            </span>
          </div>
        </div>
        <div class="py-3 pl-4 pr-8 leading-tight rounded-r-full relative">
          <p>Currently at:</p>
          <p class="font-semibold italic">SproutLoud Media Networks</p>
        </div>
      </a>
      <span class="h-10 flex items-center lg:self-start">
        <img src="/icons/colombia flag.svg" class="aspect-video" width="30" alt="">
        <p class="">Based in Medell√≠n, Colombia</p>
      </span>
    </div>
  </div>
</div>

<style is:global>
  .barlowFont { font-family: 'barlow', sans-serif; }
  .h-available { height: -webkit-fill-available;}
  .w-available { height: -webkit-fill-available;}
</style>