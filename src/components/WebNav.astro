---
import MenuMobile from '../islands/MenuMobile.vue'
import RightArrow from "../assets/RightArrow.astro";


const menu = [
   {name: 'About', url:'/'},
   {name: 'Portfolio', url:'/portfolio'},
  //  {name: 'Blog', url:'/blog'},
]
---

<!-- Desktop Navigation -->
<nav class="lg:flex justify-between items-center pt-5 m-auto z-10 relative top-0 hidden text-white">
  <a href="/" class="size-9"><img src="/images/header-logo.svg" alt="Logo Sergio Orozco"></a>
  <div class="flex gap-x-3 items-center">
    <ul class="flex gap-x-3 text-white text-lg">
      {
        menu.map(item => (
          <li class="hover:text-slate-300 transition-colors duration-300"><a href={item.url}>{item.name}</a></li>
        ))
      }
    </ul>
    <!-- <i id="langSwitcher" class="hover:bg-slate-600 border-2 border-white font-semibold transition-all duration-300 hover:rotate-2 hover:text-white bg-white text-slate-950 rounded-full px-3">ES</i> -->
  </div>
</nav>


<!-- Mobile Navigation -->
<nav class="lg:hidden flex justify-between items-center mt-5 px-2 text-lg">
  <a href="/" class="size-8"><img src="/images/header-logo.svg" alt="Logo Sergio Orozco"></a>
  <MenuMobile client:load>
    <span><RightArrow /></span>
  </MenuMobile>
</nav>