---
const sergioSkills = [
  {name:'VueJs', icon: '/icons/VueLogo.svg', description: 'Reactive Web Components'},
  {name:'Astro', icon: '/icons/Astrologo.svg', description: 'Server Side Rendering'},
  {name:'Tailwind', icon: '/icons/TailwindLogo.svg', description: 'CSS Framework'},
  {name:'Pinia', icon: '../icons/PiniaLogo.svg', description: 'Vue Store Library'},
  {name:'Firebase', icon: '/icons/firebase.svg', description: 'Database, Authentication'},
  {name:'Redis', icon: '/icons/RedisLogo.svg', description: 'Database, Authentication'},
  {name:'JavaScript', icon: '/icons/JavascriptLogo.svg', description: 'DOM Selectors, API requests'},
  // {name:'OpenApi Specs', icon: '/icons/OpenApiLogo.svg', description: 'Standards Specs'},
  {name:'Git', icon: '/icons/GitLogo.svg', description: 'Version Control System'},
  ]
---

<section class="text-slate-600 w-available">
  <div class="grid grid-cols-2 lg:grid-cols-3 gap-x-3 gap-y-3">
    {sergioSkills.map((item) => (
      <div class="border border-slate-200 bg-white rounded-md py-2 px-3 hover:-translate-y-1 transition-all duration-200 overflow-clip">
        <figure class="flex gap-x-3 items-center skillSection h-14">
          <img class="size-10 aspect-square"  height="10px" src={item.icon} alt={item.description}>
          <div class="flex flex-col gap-y-1">
            <p class="m-0 font-bold lg:text-lg text-sm leading-none titleSkill">{item.name}</p>
            <p class="leading-none m-0 text-slate-500 text-sm hidden lg:block">{item.description}</p>
          </div>
        </figure>
      </div>
    ))}
  </div>
</section>

<style is:global>
  .skillSection img{ height: -webkit-fill-available;}  
  .titleSkill { line-height: 1 !important;}
</style>