---
const projects = [
  {name:'PetgenAi', URL:'https://petgen-ai.vercel.app/',background:'from-amber-100',img:'https://i.postimg.cc/KvfHx1v9/Meta-Image.jpg', frameworks:['VueJs', 'Pinia', 'Google Ai'], description:'Project for Testing porpuses',},
  {name:'Vueshop', URL:'https://vue-blood.vercel.app/',background:'from-slate-100 to-trasparent',img:'/images/project-vueshop.webp', frameworks:['VueJs', 'Pinia', 'Firebase'], description:'Project for Testing porpuses',},
  {name:'Redil Digital', URL:'https://elredillaureles.org/',background:'from-white',img:'/images/project-redillaureles.webp', frameworks:['WordPress'], description:'Project for Testing porpuses',},
  {name:'Vue Bingo', URL:'https://vue-bingo-lyart.vercel.app/',background:'from-slate-800',img:'/images/vueBingoPortrait.webp', frameworks:['JavaScript','Tailwind'], description:'Project for Testing porpuses',},
  {name:'SolarBoard', URL:'https://solarboard.vercel.app/',background:'from-slate-900',img:'/images/solarboard.webp', frameworks:['VueJs', 'Firebase'], description:'Project for Testing porpuses',},
  {name:'LegalStatus', URL:'https://legal-status.vercel.app/',background:'from-slate-200',img:'/images/legalStatus.webp', frameworks:['VueJs', 'Pinia', 'Firebase'], description:'Project for Testing porpuses',},
]
import '../styles/MainCSS.css';
import RightArrow from "../assets/RightArrow.astro";


---

<div class="grid lg:grid-cols-3 grid-cols-1 gap-3 mt-5 lg:gridPortfolio text-slate-700 mb-10">
  {projects.map((proj) => (
    <a href={proj.URL} target="_blank" rel="noopener noreferrer" class="card group">
      <div class="shadow-sm rounded-lg lg:h-72 h-64 flex flex-col relative bg-cover bg-center justify-between overflow-clip transition-all duration-300 group-hover:grayscale-0">
        <img class="absolute h-full object-cover w-full" src={proj.img} alt="image of projects">
        <ul class="relative top-2 right-2 flex gap-x-1 justify-end">
          {proj.frameworks.map((item) => (
            <li class="text-sm font-semibold bg-black/95 rounded-full px-2 text-white">{item}</li>
            ))}
        </ul>
        <div class="flex justify-between items-center w-full bg-white/80 backdrop-blur-lg hover:bg-slate-100/60 py-3 px-4">
          <div class="text-slate-800 transition-all duration-300 z-10" class:list={proj.background}>
            <p class="items-end font-bold leading-tight">{proj.name}</p>
            <p class="items-end text-sm leading-tight">{proj.description}</p>
          </div>
          <RightArrow></RightArrow>
        </div>
      </div>
    </a>
  ))}
</div>

