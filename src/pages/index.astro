---
import Layout from "../layouts/Layout.astro"
import WebNav from "../components/WebNav.astro";
---

<Layout title="Sergio Orozco | Frontend Developer | VueJs, Astro, Tailwind">
  <section class="lg:px-10 px-5 pt-2 pb-8 mt-5 rounded-2xl bg-gradient-to-b from-teal-950 static to-teal-600 -z-10 overflow-clip">
    <WebNav></WebNav>
    <main class="wrapper m-auto flex gap-x-4 justify-center items-center mt-10">
      <div class="lg:text-balance text-center">
        <p class="text-3xl lg:text-5xl">Hi There, I'm</p>
        <h1 class="text-5xl lg:text-8xl font-extrabold uppercase">Sergio Orozco</h1>
        <div class="flex flex-col lg:flex-col gap-3 justify-center items-center">
          <h2 class="text-2xl lg:text-4xl font-semibold inline-block">Front-end Developer</h2>
          <h3 class="mt-1 text-xl lg:text-2xl font-semibold italic bg-teal-100 rounded-xl px-4 py-1 text-teal-950 inline-block hover:bg-teal-950 hover:text-white"><a href="#" target="_blank">At SproutLoud Media Networks</a></h3>
        </div>
      </div>
    </main>
    <!-- <p class="text-10xl font-bold relative bottom-0">Frontend Developer</p> -->
  </section>
</Layout>